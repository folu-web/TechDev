extends base
block content
  .container
    h3 Register Page
    p.lead Please register here.
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-default.btn-success(type='submit') Submit
      
      a.ml-3(href='/')
        button.btn.btn-secondary(type="button") Cancel